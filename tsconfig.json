{
  "compilerOptions": {
    "target": "es2016",
    "outDir": "bin",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "jquery"
    ],
    "removeComments": true,
    "lib": [
      "dom",
      "es6"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
